    "version": "0.2.0",
    "configurations": [
        {
            "name": "TorchRun Distributed Training",
            "type": "python",
            "request": "launch",
            "program": "/home/charlie/anaconda3/envs/gpt-fast/bin/torchrun",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "ENABLE_INTRA_NODE_COMM": "1"
            },
            "args": [
                "--standalone", 
                "--nproc_per_node=8",
                "benchmark.py",
                "--model_name", "gpt_residual:34B",
                "--num_samples", "16",
                "--batch_size", "1",
                "--prompt_length", "1024",
                "--max_new_tokens", "1024",
                "--device", "cuda",
                "--turbo_mode", "skip-residual-v0",
                "--nonturbo_initial_layers", "1",
                "--nonturbo_final_layers", "0",
            ]
        }
    ]
}